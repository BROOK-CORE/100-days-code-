#include <stdio.h>

int main() {
    int n, i;
    float numerator = 2.0, denominator = 3.0, sum = 0.0;

    printf("Enter the number of terms: ");
    scanf("%d", &n);

    for (i = 1; i <= n; i++) {
        sum += numerator / denominator;
        numerator += 2;      // Increases by 2 each time
        denominator += 4;    // Increases by 4 each time
    }

    printf("Sum of the series up to %d terms = %.4f\n", n, sum);

    return 0;
}

#include <stdio.h>

int main() {
    int i, j;

    for (i = 1; i <= 5; i++) {
        for (j = 1; j <= 5; j++) {
            printf("*");
        }
        printf("\n");
    }

    return 0;
}